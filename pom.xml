<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>kg.apc</groupId>
    <artifactId>jmeter-plugins</artifactId>
    <version>2.0</version>
    <packaging>pom</packaging>

    <name>JMeter Plugins - Parent</name>
    <description>Custom plugins set for Apache JMeter</description>
    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <url>http://jmeter-plugins.org/</url>
    <scm>
        <url>https://github.com/undera/jmeter-plugins</url>
        <connection>https://github.com/undera/jmeter-plugins.git</connection>
        <developerConnection>git@github.com:undera/jmeter-plugins.git</developerConnection>
    </scm>
    <developers>
        <developer>
            <id>team</id>
            <name>jmeter-plugins.org</name>
            <email>jmeter-plugins@googlegroups.com</email>
        </developer>
    </developers>
    <distributionManagement>
        <snapshotRepository>
            <id>sonatype-snapshot</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>sonatype</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <additionalparam>-Xdoclint:none</additionalparam>

        <jmeter.version>2.13</jmeter.version>
        <powermock.version>1.6.2</powermock.version>
        <cobertura-maven.version>2.6</cobertura-maven.version>
        <cmdrunner-version>1.0.2</cmdrunner-version>
    </properties>

    <repositories>
        <repository>
            <id>cloudera repository</id>
            <url>https://repository.cloudera.com/artifactory/cloudera-repos/</url>
        </repository>
    </repositories>

    <modules>
        <module>common</module>
        <module>standard</module>
        <module>extras</module>
        <module>hadoop</module>
        <module>webdriver</module>
        <module>xmpp</module>
        <module>plugins-manager</module>
        <module>udp</module>
        <module>emulators</module>
        <module>charts</module>
        <module>sense-uploader</module>
        <module>perfmon</module>
        <module>json</module>
        <module>redis</module>
        <module>oauth</module>
        <module>jms</module>
        <module>wsc</module>
        <module>casutg</module>
        <module>functions</module>
        <module>fifo</module>
        <module>prmctl</module>
        <module>dbmon</module>
        <module>jmxmon</module>
        <module>autostop</module>
        <module>csvars</module>
        <module>lockfile</module>
        <module>dummy</module>
        <module>common-io</module>
        <module>httpraw</module>
        <module>graphs-vs</module>
        <module>graphs-dist</module>
    </modules>

</project>
